{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["ESNext"],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "paths": {
            "*": ["src/*"]
        }
    },
    "include": ["src/**/*"]
}
